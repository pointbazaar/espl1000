// functions to control Timer0 on ATMega328p

fn timer0_mode(uint8 value) -> int {

	*uint8 ptr = 0x44;
	*ptr = value; //TCCR0A
	return 0;
}

fn timer0_prescaler(uint8 value) -> int {

	//valid values: 1,2,3,4,5

	//[0x45] = value & 0b111; //TCCR0B
	*uint8 ptr = 0x45;
	*ptr = value; //TCCR0B
	return 0;
}

fn timer0_read() -> uint8 {

	*uint8 ptr = 0x46;
	return *ptr; //TCNT0
}
