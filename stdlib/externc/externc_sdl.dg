	SDL_Surface src, SDL_Rect src_rect, 
	SDL_Surface dest, SDL_Rect dest_rect
) ~> int "SDL_BlitSurface"

externc fn sdl_blit_scaled(
	SDL_Surface src, SDL_Rect src_rect,
	SDL_Surface dest, SDL_Rect dest_rect
) ~> int "SDL_BlitScaled"

externc fn sdl_free_surface(SDL_Surface surface) ~> bool "SDL_FreeSurface"

