#include <stdio.h>
#include <stdlib.h>
//The goal of this example is to 
//contain all Statement types
//and use as many features of smalldragon
//as possible
//so that transpiling it will
//be useful to detect memory leaks with Valgrind

/*
//Statements
[x] ForStmt
[x] WhileStmt
[x] BreakStmt
[x] ReturnStmt
[x] AssignStmt
[x] IfStmt

[x] Local Variable Type Inference
*/

fn main () ~> int {

	[int] arr = malloc(4*4);
	arr[0] = 1;

	for i in 0 .. 1 {
		
		printf("%ld", i);
	}

	a = 0;
	b = 3.14159; //...
	c = "hi";

	while a < 4 {

		a = a + 1;
		b = b - 0.1;
		printf("%s\n", c);
		break;
	}

	if a == 4 {
		
		return -3;
	}

	switch a {
		
		case -1 {}

		case 0
		case 1 {
			a = 2;
		}
	}

	return subr();
}

fn subr () -> int {
	return 0;
}
